// https://raw.githubusercontent.com/brandovidal/adventjs/main/.eslintrc.json

{
  "env": {
    "node": true,
    "es2022": true,
    "jest": true
  },
  "extends": "./node_modules/standard/eslintrc.json",
  "ignorePatterns": ["build", "node_modules/"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "eqeqeq": "error",
    "no-console": "warn",
    "no-var": "error",
    "object-shorthand": "error",
    "prefer-const": "error",
    "space-before-function-paren": "warn"
  }
}
